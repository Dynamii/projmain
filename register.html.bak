					<input type = "radio" name = "mop" value = "Cash" required> Cash 
					<input type = "radio" name = "mop" value = "Credit Card" required> Credit Card

					<br><br>					
					
					<p> Birthdate:
					<input type = "date" name = "bdate" placeholder = "mm/dd/yyyy" required> 
					
					<br><br>
					
					Gender: <br>
					<input type = "radio" name = "gn" value = "male" required> Male 
					<input type = "radio" name = "gn" value = "female" required> Female 
				
					<br><br>

					<input type = "checkbox" name = "check"> 
					<label for = "check"> I have read and agree to the <a href = "tac.html"> Terms and Conditions</a></label>
						
					<br><br>				
			
					<input type = "submit" value = "Register" onclick = "save(form.fname.value, form.lname.value, form.add.value, form.email.value, form.cnum.value, form.pay.value, form.bdate.value, form.sx.value)"/>
                   
